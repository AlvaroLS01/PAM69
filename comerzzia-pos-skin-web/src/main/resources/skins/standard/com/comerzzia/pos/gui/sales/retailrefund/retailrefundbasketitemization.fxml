<AnchorPane id="AnchorPane" prefHeight="728.0" prefWidth="1024.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2">
  <children>
    <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
        <HBox alignment="CENTER" minHeight="48.0">
          <children>
            <CzzHeader fx:id="header" />
          </children>
        </HBox>
        <HBox prefHeight="728.0" prefWidth="1024.0" VBox.vgrow="ALWAYS">
          <children>
            <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
              <children>
                <WebView fx:id="wvPrincipal" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
              </children>
            </VBox>
            <VBox prefWidth="350.0" spacing="10.0" HBox.hgrow="NEVER">
              <children>
                <VBox fx:id="vbTopButtonsPanel" prefHeight="60.0" prefWidth="320.0">
                  <VBox.margin>
                    <Insets top="15.0" />
                  </VBox.margin>
                </VBox>
                <HBox prefHeight="41.0">
                  <children>
                    <TextField fx:id="tfItemCode" onKeyReleased="#actionTfItemCode" prefHeight="41.0" prefWidth="265.0" styleClass="textfield-composite-left" HBox.hgrow="ALWAYS" />
                    <NumericTextField fx:id="tfItemQuantity" alignment="CENTER_RIGHT" onKeyReleased="#actionTfItemQuantity" prefHeight="41.0" prefWidth="130.0" text="1">
                      <styleClass>
                        <String fx:value="textfield-composite-right" />
                        <String fx:value="tf-quantity" />
                      </styleClass>
                    </NumericTextField>
                  </children>
                </HBox>
                <HBox prefHeight="360.0">
                  <children>
                    <NumericKeypad fx:id="numpad" />
                  </children>
                </HBox>
                <Button fx:id="btPayment" mnemonicParsing="false" onAction="#openPayments" prefHeight="60.0" prefWidth="1500.0" style="" styleClass="btn-payment" text="%Pago" />
                <VBox fx:id="vbBottomButtonsPanel" prefHeight="130.0" />
              </children>
              <padding>
                <Insets left="15.0" right="15.0" />
              </padding>
            </VBox>
            <VBox fx:id="vbOtherButtons" prefHeight="-1.0" prefWidth="350.0" spacing="10.0" style="">
              <children>
                <VBox fx:id="vbOtherButtonsPane" fillWidth="true" prefHeight="-1.0" style="" VBox.vgrow="ALWAYS">
                  <VBox.margin>
                    <Insets top="15.0" />
                  </VBox.margin>
                </VBox>
                <HBox prefHeight="-1.0" spacing="10.0" style="">
                  <children>
                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#switchLateralVBox" prefHeight="60.0" styleClass="texto-negrita" text="%Cancelar" HBox.hgrow="ALWAYS" />
                  </children>
                  <VBox.margin>
                    <Insets bottom="10.0" top="10.0" />
                  </VBox.margin>
                </HBox>
              </children>
              <padding>
                <Insets left="15.0" right="15.0" />
              </padding>
            </VBox>
          </children>
        </HBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
