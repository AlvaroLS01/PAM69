<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-stylesheet ../../styles/colors.css?>
<?scenebuilder-stylesheet ../../styles/styles.css?>

<AnchorPane id="AnchorPane" fx:id="panelContenido" prefHeight="600.0" prefWidth="800.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" >
  <children>
    <VBox prefHeight="-1.0" prefWidth="-1.0" styleClass="background-card-pane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
        <HBox prefHeight="-1.0" prefWidth="-1.0" spacing="5.0" style="-fx-background-color:white;" VBox.vgrow="NEVER">
          <children>
            <VBox minHeight="-1.0" prefHeight="-1.0" prefWidth="-1.0" spacing="5.0" HBox.hgrow="ALWAYS">
              <children>
                <HBox alignment="CENTER" prefHeight="-1.0" prefWidth="-1.0" spacing="5.0">
                  <children>
                    <Label alignment="CENTER_RIGHT" prefHeight="-1.0" prefWidth="130.0" text="%Apartado Nº" />
                    <TextField fx:id="tfApartado" focusTraversable="true" onKeyReleased="#accionBuscarIntro" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
                    <CheckBox fx:id="cbVerTodo" focusTraversable="true" mnemonicParsing="false" text="%Ver todos">
                      <HBox.margin>
                        <Insets left="20.0" />
                      </HBox.margin>
                    </CheckBox>
                  </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="-1.0" prefWidth="-1.0" spacing="5.0">
                  <children>
                    <Label alignment="CENTER_RIGHT" prefWidth="130.0" text="%Cliente" />
                    <TextField id="tfcliente" fx:id="tfCliente" focusTraversable="true" onKeyReleased="#accionBuscarIntro" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
                  </children>
                </HBox>
              </children>
            </VBox>
            <VBox prefHeight="71.0" prefWidth="129.0">
              <children>
                <GridPane VBox.vgrow="ALWAYS">
                  <children>
                    <HBox alignment="CENTER" prefHeight="-1.0" prefWidth="-1.0" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
                      <children>
                        <Label alignment="CENTER" prefHeight="-1.0" prefWidth="130.0" text="%Activo" />
                      </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="-1.0" prefWidth="-1.0" styleClass="hbox-apartado-cancelado" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
                      <children>
                        <Label alignment="CENTER" prefHeight="-1.0" prefWidth="130.0" text="%Cancelado" />
                      </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="-1.0" prefWidth="-1.0" styleClass="hbox-apartado-finalizado" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">
                      <children>
                        <Label alignment="CENTER" prefHeight="-1.0" prefWidth="130.0" text="%Finalizado" />
                      </children>
                    </HBox>
                  </children>
                  <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  </columnConstraints>
                  <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                </GridPane>
              </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="-1.0" prefWidth="-1.0">
              <children>
                <Button focusTraversable="true" mnemonicParsing="false" onAction="#accionBtBuscar" prefHeight="42.0" prefWidth="136.0" styleClass="blue-btn" text="%Buscar" />
              </children>
            </VBox>
          </children>
          <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
          </padding>
        </HBox>
        <HBox prefHeight="-1.0" prefWidth="-1.0" style="-fx-background-color:white;" VBox.vgrow="NEVER">
          <children>
            <Label fx:id="lbError" alignment="CENTER" prefHeight="-1.0" prefWidth="-1.0" styleClass="lbError" text="" />
          </children>
        </HBox>
        <HBox prefHeight="-1.0" prefWidth="-1.0" styleClass="card" VBox.vgrow="NEVER">
          <children>
            <AnchorPane fx:id="panelBotonera" prefHeight="40.0" prefWidth="-1.0" />
          </children>
        </HBox>
        <HBox prefHeight="-1.0" prefWidth="-1.0" styleClass="card" VBox.vgrow="ALWAYS">
          <children>
            <TableView fx:id="tbApartados" onMouseReleased="#aceptarArticuloDobleClick" prefHeight="51.0" prefWidth="-1.0" tableMenuButtonVisible="false" HBox.hgrow="ALWAYS">
              <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
              </columnResizePolicy>
              <columns>
                <TableColumn maxWidth="5000.0" minWidth="97.0" prefWidth="97.0" text="%Nº" fx:id="tcNumApartado" />
                <TableColumn maxWidth="5000.0" minWidth="120.0" prefWidth="191.0" text="%Fecha" fx:id="tcFecha" />
                <TableColumn maxWidth="5000.0" minWidth="272.0" prefWidth="272.0" text="%Cliente" fx:id="tcCliente" />
                <TableColumn minWidth="120.0" prefWidth="75.0" text="%Importe" fx:id="tcImporte" />
                <TableColumn minWidth="120.0" prefWidth="120.0" text="%Saldo" fx:id="tcSaldoCliente" />
                <TableColumn maxWidth="13.0" minWidth="10.0" prefWidth="13.0" text="" />
              </columns>
            </TableView>
          </children>
        </HBox>
      </children>
    </VBox>
  </children>
  <stylesheets>
    <URL value="@../../styles/styles.css" />
  </stylesheets>
</AnchorPane>
