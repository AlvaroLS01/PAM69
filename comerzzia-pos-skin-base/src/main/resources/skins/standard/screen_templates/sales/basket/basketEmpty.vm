	<div class="flex-fill">
		<div class="alert alert-primary" role="alert"">
			<h2 class="alert-heading">#i18n("Nuevo cliente")</h2>
			<hr>
			<p>#i18n("Puede comenzar a pasar los productos, leer la tarjeta de fidelización, cupones, etc.")</p>			
		</div>
	</div>
	
#if($cashLimitLock || $cashLimitWarning || $basketsParked > 0)
	#if($cashLimitLock)
		<div class="content has-filler">
			<div class="flex-fill alert alert-danger d-flex justify-content-between align-items-center" role="alert">
				<span>#i18n("Debe realizar una retirada de efectivo para poder continuar")</span>
				<button type="button" class="btn btn-danger" onclick="execute('CashWithdraw', [{'name':'action_id', 'value':'4002'}])">
				#i18n("Gestión Caja")
				</button>
			</div>
		</div>				
	#elseif($cashLimitWarning)
		<div class="content has-filler">
			<div class="flex-fill alert alert-warning d-flex justify-content-between align-items-center" role="alert"">
				<span>#i18n("Ha superado el límite de efectivo. Deberá realizar una retirada")</span>					
				<button type="button" class="btn btn-warning" onclick="execute('CashWithdraw', [{'name':'action_id', 'value':'4002'}])">
				#i18n("Gestión Caja")
				</button>
			</div>
		</div>
	#end
	#if($basketsParked > 0)
		<div class="flex-fill">
			<div class="flex-fill alert alert-warning d-flex justify-content-between align-items-center" role="alert"">
				<h2>#i18n("Hay {0, number, integer} ticket(s) aparcado(s)", $basketsParked)</h2>
				<button type="button" class="btn btn-warning" onclick="executeOperation('SalesOperations', 'RetrieveBasket')">
					#i18n("Recuperar ticket")
				</button>
			</div>
		</div>
	#end
#end
	
	<div class="d-flex align-items-center text-center empty-basket">
		<div class="flex-fill">
			##img("logos/logo_comerzzia_icon.png")
		</div>
	</div>

		